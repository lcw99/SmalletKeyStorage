<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.smallet.keystorage">

    <permission
        android:name="co.smallet.keystorage.permission.SMALLET"
        android:protectionLevel="signature" />
    <permission android:name="co.smallet.keystorage.provider.KeyVaultContentProvider.READ_PERMISSION"/>

    <uses-permission android:name="co.smallet.keystorage.permission.SMALLET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignupActivity"
            android:exported="true"
            android:permission="co.smallet.keystorage.permission.SMALLET"
            android:theme="@style/AppTheme.Dark" />

        <service
            android:name=".KeyStorageService"
            android:exported="true"
            android:launchMode="singleInstance"
            android:permission="co.smallet.keystorage.permission.SMALLET" />

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.ActionBar.Dark" />

        <provider
            android:name=".contentprovider.KeyVaultContentProvider"
            android:authorities="co.smallet.keystorage.provider.KeyVaultContentProvider"
            android:readPermission="co.smallet.keystorage.provider.KeyVaultContentProvider.READ_PERMISSION"
            android:enabled="true"
            android:exported="true"/>
    </application>

</manifest>